#ifndef WZALGORITHM_CONFIG_H_
#define WZALGORITHM_CONFIG_H_


#include <vector>
#include <ostream>


#define WZALGORITHM_VERSION "@PROJECT_VERSION@"


namespace wzalgorithm {
    typedef std::vector<double> vector_t;
}


namespace std {
    static ostream& operator <<(
            ostream& os,
            wzalgorithm::vector_t const& vec)
    {
        os << "(";

        for (size_t i = 0; i != vec.size(); ++i) {
            os << vec.at(i);
            os << (i+1 < vec.size() ? ", " : "");
        }

        os << ")";
        return os;
    }
} // namespace std


#endif // WZALGORITHM_CONFIG_H_
